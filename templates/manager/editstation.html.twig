{% extends "manager/decoupe.html.twig" %}

{% block title %}Corlay manager - Stations{% endblock %}

{% block active_menu_stations %}active bg-gradient-primary{% endblock %}

{% block content %}
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Stations-service</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Modifier une station</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <ul class="navbar-nav  justify-content-end">
                    <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                            <div class="sidenav-toggler-inner">
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid px-2" style="margin-top: 5em!important;">
        <div class="card card-body mx-3 mx-md-4 mt-n6">
            <div class="row">
                <div class="row">
                    <div class="col-12 mt-4">
                        <div class="mb-5 ps-3">
                            <h4 class="mb-1">Modifier une Station Corlay</h4>
                        </div>
                        <form action="{{ path('updatestation',{'id':station.id}) }}" method="post">
                            <div class="col input-group input-group-outline" style="padding-bottom: 20px;">
                                <label class="col-form-label">Nom de station :</label> &nbsp;&nbsp;&nbsp;
                                <input type="text" value="{%if station.nom is defined %}{{ station.nom }}{% endif %}" class="form-control" required name="nom">
                            </div>
                            <div class="input-group input-group-outline" style="padding-bottom: 20px;">
                                <label class="col-form-label">Emplacement : &nbsp;&nbsp;</label>&nbsp;&nbsp;&nbsp;
                                <input type="text" value= "{%if station.emplacement is defined %}{{ station.emplacement }}{% endif %}" required class="form-control" name="emplacement">
                            </div>

                            <div class="col input-group input-group-outline">
                                <label class="col-form-label">Google Maps : &nbsp;&nbsp;</label>&nbsp;&nbsp;&nbsp;
                                <input type="text" value= "{%if station.framecode is defined %}{{ station.framecode }}{% endif %}" class="form-control" name="map">
                            </div>

                            <br><h5>Disponibilit√© des Produits</h5>
                            <div class="col input-group input-group-outline" style="padding-bottom: 20px;">
                                <label class="col-form-label">Butane 6Kg :</label>&nbsp;&nbsp;&nbsp;
                                <input type="text" value= "{% if station.bt6 is defined %}{{ station.bt6 }}{% endif %}" class="form-control" name="bt6">
                            </div>
                            <div class="col input-group input-group-outline" style="padding-bottom: 20px;">
                                <label class="col-form-label">Butane 12Kg :</label>&nbsp;&nbsp;&nbsp;
                                <input type="text" value= "{% if station.bt12 is defined %}{{ station.bt12 }}{% endif %}" class="form-control" name="bt12">
                            </div>

                            <div class="col input-group input-group-outline" style="padding-bottom: 20px;">
                                <label class="col-form-label">Lubrifiants : &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>&nbsp;&nbsp;&nbsp;
                                <input type="text" value= "{{ station.lubs }}" class="form-control" name="lubs">
                            </div>

                            <div class="col input-group input-group-outline" style="padding-bottom: 20px;">
                                <label class="col-form-label"> Boutique C-Shop : </label>&nbsp;&nbsp;&nbsp;
                                    <select class="form-select" aria-label="Default select example" name="boutique">
                                        <option value="Oui" {% if station.cshop == "Oui" %}selected{% endif %}>Oui</option>
                                        <option value="Non" {% if station.cshop == "Non" %}selected{% endif %}>Non</option>
                                    </select>
                            </div>
                            <div class="col input-group input-group-outline" style="padding-bottom: 20px;">
                                <label class="col-form-label">Contacts : &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>&nbsp;&nbsp;&nbsp;
                                <input type="text" value= "{{ station.contacts }}" class="form-control" name="contacts">
                            </div>

                            <button class="btn bg-gradient-success w-100 mb-0 toast-btn" type="submit" style="margin-top: 2em;" data-target="successToast">
                                <i class="far fa-save"></i> Enregistrer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}