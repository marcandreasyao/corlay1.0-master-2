{% extends "manager/decoupe.html.twig" %}

{% block active_menu_videos %}active bg-gradient-primary
{% endblock %}

{% block title %}Corlay manager - Vidéothèque
{% endblock %}

{% block content %}
	<!-- Navbar -->
	<nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
		<div class="container-fluid py-1 px-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
					<li class="breadcrumb-item text-sm">
						<a class="opacity-5 text-dark" href="javascript:;">Pages</a>
					</li>
					<li class="breadcrumb-item text-sm text-dark active" aria-current="page">Vidéos</li>
				</ol>
				<h6 class="font-weight-bolder mb-0">Vidéothèque Corlay</h6>
			</nav>
			<div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
				<ul class="navbar-nav  justify-content-end">
					<li class="nav-item d-xl-none ps-3 d-flex align-items-center">
						<a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
							<div class="sidenav-toggler-inner">
								<i class="sidenav-toggler-line"></i>
								<i class="sidenav-toggler-line"></i>
								<i class="sidenav-toggler-line"></i>
							</div>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<!-- End Navbar -->

	<div class="container-fluid px-2" style="margin-top: 5em!important;">
		<div class="card card-body mx-3 mx-md-4 mt-n6">
			<div class="row">
				<div class="row">
					<div class="col-12 mt-4">
						<div class="mb-5 ps-3">
							<h4 class="mb-1">Videos Corlay</h4>
							<button class="btn bg-gradient-success mb-0 toast-btn float-end" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" data-target="successToast" style="margin-top: -39px;">
								<i class="fas fa-plus"></i>
								Nouveau
							</button>
						</div>
						<div class="row">
							{%  for video in videos %}
								<div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
									<div class="card card-blog card-plain">
										<div class="card-header p-0 mt-n4 mx-3">
											<iframe width="250" height="180" src="https://www.youtube.com/embed/{{ video.link[32:] }}" title="{{ video.name }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
										</div>
										<div class="card-body p-3">
											<a href="javascript:;">
												<h5>
													{{video.name|length > 20 ? video.name|slice(0, 20) ~ '...' : video.name}}
												</h5>
											</a>
											<p class="mb-4 text-sm">
												Publiée le
												{{ video.date|date("d/m/Y") }}
											</p>
											<div class="d-flex align-items-center">
												{% if (app.user.roles[0] == 'ROLE_ADMIN' or app.user.roles[0] =='ROLE_SUPER_ADMIN') %}
													<a href="{{ path('videodelete',{'id':video.id}) }}" class="btn bg-gradient-danger mb-0 toast-btn" type="button">
														<i class="fas fa-trash"></i>
													</a>
												{% endif %}
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Ajouter une nouvelle Vidéo</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<form action="{{ path('videosave') }}" class="text-start" method="post" enctype="multipart/form-data">
						<div class="input-group input-group-outline my-3">
							<label class="form-label">Titre de la vidéo</label>
							<input type="text" name="videotitle" class="form-control" required>
						</div>
						<div class="input-group input-group-outline my-3">
							<label class="form-label">Lien de la vidéo Yotube</label>
							<input type="text" name="videolink" class="form-control" required>
						</div>
						<div class="input-group input-group-outline my-3">
                            <input type="file" name="miniature" required onchange="previewPicture(this)" accept="image/png, image/jpeg" class="form-control">
                        </div>
                        <h6>Aperçu miniature vidéo</h6>
                        <p>
                            <img src="#" id="image" class="img-fluid shadow border-radius-xl">
                        </p>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
							<button type="submit" name="validate" class="btn btn-primary">Enregistrer
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- Modal -->
{% endblock %}

{% block addjs %}
    <script type="text/javascript" >
        // L'image img#image
        var image = document.getElementById("image");

        // La fonction previewPicture
        var previewPicture  = function (e) {

            // e.files contient un objet FileList
            const [picture] = e.files

            // "picture" est un objet File
            if (picture) {
                // On change l'URL de l'image
                image.src = URL.createObjectURL(picture)
            }
        }
    </script>
{% endblock %}
