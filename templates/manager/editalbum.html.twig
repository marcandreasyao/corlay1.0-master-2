{% extends 'manager/decoupe.html.twig' %}

{% block title %}Corlay Administration - Editer un album{% endblock %}

{% block active_menu_galery %}active bg-gradient-primary{% endblock %}

{% block content %}
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Editer un album de photo </li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Ajouter des medias à l'album selectionné </h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">

                <ul class="navbar-nav  justify-content-end">
                    <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                            <div class="sidenav-toggler-inner">
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid px-2" style="margin-top: 5em!important;">
        <div class="card card-body mx-3 mx-md-4 mt-n6">
            <div class="row">
                <div class="row">
                    <div class="col-12 mt-4">
                        <div class="mb-5 ps-3">
                            <h5 class="mb-1">
                                 Ajouter des photos
                            </h5>
                            <form action="{{ path('pushphotos',{'id': album_id }) }}"class="text-start" method="post" enctype="multipart/form-data">
                                <input type="file" name="files[]" style="color: orange;border: 1px solid;"
                                       accept="image/png, image/jpeg" class="form-control" multiple>
                                <button class="btn bg-gradient-success mb-0 toast-btn" type="submit" style="margin-top: 10px;" data-target="successToast" >
                                    <i class="far fa-save"></i>
                                    Enregistrer
                                </button>
                            </form>
                        </div>

                        <div class="mb-5 ps-3">
                            <h5 class="mb-1">
                                Aperçu des medias dans l'album photo
                            </h5>
                        </div>
                        <div class="row">
                            {% for item in contenu  %}
                                <div class="col-xl-2 col-md-6 mb-xl-0 mb-4" style="padding-bottom: 20px;">
                                    <div class="card card-blog card-plain">
                                        <div class="card-header p-0 mt-n4 mx-3">
                                            <div class="d-block shadow-xl border-radius-xl">
                                                <img src="{{ asset(photo_dir ~ item.imagename) }}" class="img-fluid shadow border-radius-xl">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}